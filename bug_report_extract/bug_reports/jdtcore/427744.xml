    public static void main(String argv[]) {
        int i = ((I) (x) -&gt; { return 999; }).foo(true ? 0 : (Comparable) null);
        System.out.println(i);
    }

    interface I {
        int foo (Comparable arg); 
        default int foo (Object arg) { 
            return 0;
        }
    }
}</thetext>
