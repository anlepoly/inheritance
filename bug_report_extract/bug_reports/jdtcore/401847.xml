interface I {
	Integer foo(X x);
}

public class X {
	int foo(I ...i) { return 10;}

	int goo() { return 0;}
	
	{
		foo(true ? X::goo : X::goo);
		foo(true ? x-&gt; 1 : x-&gt;0);
	}
}</thetext>
